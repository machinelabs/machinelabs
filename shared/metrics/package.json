{
  "name": "@machinelabs/metrics",
  "version": "0.18.0-dev+utc.2017.Oct.24-15.12.16",
  "description": "Metrics such as usage statistics",
  "main": "index.js",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@machinelabs/core)/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "postinstall": "tsc",
    "test": "./node_modules/jest/bin/jest.js",
    "tslint": "tslint  -c ./tslint.json './**/*.ts' --exclude './node_modules/**/*.ts' --exclude './**/*.d.ts'",
    "tsfix": "tslint --fix -c ./tslint.json './**/*.ts' --exclude './node_modules/**/*.ts' --exclude './**/*.d.ts'",
    "ci": "npm run tslint && npm run test"
  },
  "dependencies": {
    "@machinelabs/core": "file:../core",
    "@machinelabs/models": "file:../models",
    "@reactivex/rxjs": "^5.4.2",
    "@types/node": "^8.0.19",
    "firebase": "^4.2.0",
    "jest": "^20.0.4"
  },
  "devDependencies": {
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  }
}
