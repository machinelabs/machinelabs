{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "es2015", "es2016.array.include", "es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSources": true,
    "stripInternal": true,
    "paths": {
      "firebase": ["./node_modules/firebase"]
    },
    "baseUrl": "",
    "typeRoots": [  "./node_modules/@types" ],
    "types": [  "node"  ]
  },
  "files": [
    "src/index.ts"
  ]
}

