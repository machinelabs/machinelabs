{
  "name": "@machinelabs/core",
  "version": "0.21.2+utc.2017.Nov.22-9.06.52",
  "description": "Fundamentals that can be shared across various projects",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@machinelabs/core)/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "test": "./node_modules/jest/bin/jest.js",
    "tslint": "tslint  -c ./tslint.json './src/**/*.ts'",
    "tsfix": "tslint --fix -c ./tslint.json './src/**/*.ts'",
    "ci": "npm run tslint && npm run test"
  },
  "dependencies": {
    "@machinelabs/models": "file:../models",
    "@reactivex/rxjs": "^5.4.2",
    "@types/node": "^8.0.19",
    "@types/shortid": "^0.0.29",
    "firebase": "^4.2.0",
    "moment": "^2.18.1",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  }
}
