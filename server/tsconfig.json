{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "es2015", "es2016.array.include", "dom", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSources": true,
    "stripInternal": true,
    "paths": {
      "firebase": ["./node_modules/firebase"],
      "rxjs/*": ["./node_modules/rxjs/*"]
    },
    "baseUrl": "",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  }
}
