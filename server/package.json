{
  "name": "machinelabs-server",
  "version": "0.1.0",
  "description": "Prototype backend for machinelabs",
  "main": "index.js",
  "author": "Christoph Burgdorf <christoph.burgdorf@bvsn.org> (http://cburgdorf.wordpress.com/)",
  "license": "ISC",
  "dependencies": {
    "@reactivex/rxjs": "^5.4.2",
    "@types/js-yaml": "^3.5.30",
    "firebase": "^3.7.1",
    "firebase-admin": "^4.2.1",
    "js-yaml": "^3.8.4",
    "minimist": "1.2.0",
    "moment": "^2.18.1",
    "tslint": "^5.5.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "node_modules": "rm -rf ./node_modules && yarn install",
    "build": "gulp build",
    "test": "./node_modules/jest/bin/jest.js",
    "tslint": "tslint -c config/tslint.json src/**/*.ts",
    "tsfix": "tslint --fix -c config/tslint.json src/**/*.ts",
    "ci": "gulp build --env=staging && npm run tslint && npm run test"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/glob": "^5.0.29",
    "@types/gulp": "^3.8.29",
    "@types/jasmine": "^2.2.34",
    "@types/jest": "^19.2.2",
    "@types/merge2": "0.0.28",
    "@types/minimist": "^1.1.28",
    "@types/node": "^6.0.45",
    "@types/run-sequence": "0.0.27",
    "@types/socket.io": "^1.4.27",
    "@types/source-map": "^0.1.27",
    "@types/uglify-js": "^2.0.27",
    "chalk": "^1.1.3",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-cli": "^1.2.2",
    "gulp-rename": "^1.2.2",
    "gulp-server-livereload": "^1.8.2",
    "gulp-shell": "^0.5.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-typescript": "^2.13.6",
    "jasmine": "^2.4.1",
    "jest": "^19.0.2",
    "merge": "^1.2.0",
    "merge2": "^1.0.2",
    "readline-sync": "^1.4.4",
    "request": "^2.72.0",
    "resolve-bin": "^0.4.0",
    "run-sequence": "^1.2.2",
    "ts-helpers": "1.1.2",
    "ts-jest": "^19.0.14",
    "ts-node": "^0.9.3",
    "typescript": "2.4.0",
    "yargs": "^4.7.1"
  }
