{
  "name": "machinelabs-server",
  "version": "0.14.1+utc.2017.Sep.16-10.57.30",
  "description": "Prototype backend for machinelabs",
  "main": "index.js",
  "author": "Christoph Burgdorf <christoph.burgdorf@bvsn.org> (http://cburgdorf.wordpress.com/)",
  "license": "ISC",
  "dependencies": {
    "@machinelabs/core": "file:../shared/core",
    "@machinelabs/metrics": "file:../shared/metrics",
    "@reactivex/rxjs": "^5.4.2",
    "@types/js-yaml": "^3.5.30",
    "@types/lodash.isnumber": "^3.0.3",
    "@types/lodash.isstring": "^4.0.3",
    "ansi-escape-sequences": "^4.0.0",
    "firebase": "^4.2.0",
    "firebase-admin": "^4.2.1",
    "js-yaml": "^3.8.4",
    "lodash.isnumber": "^3.0.3",
    "lodash.isstring": "^4.0.1",
    "log4js": "^2.3.3",
    "minimist": "1.2.0",
    "tslint": "^5.5.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@machinelabs/core)/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "node_modules": "rm -rf ./node_modules && yarn install",
    "build": "node ./build/build.js",
    "test": "./node_modules/jest/bin/jest.js",
    "debug-test": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "tslint": "tslint -c ./tslint.json 'src/**/*.ts'",
    "tsfix": "tslint --fix -c ./tslint.json 'src/**/*.ts'",
    "ci": "node ./build/build.js --env=staging && npm run tslint && npm run test"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.2.34",
    "@types/jest": "^19.2.2",
    "@types/log4js": "^0.0.33",
    "@types/minimist": "^1.1.28",
    "@types/node": "^6.0.45",
    "@types/source-map": "^0.1.27",
    "chalk": "^1.1.3",
    "jasmine": "^2.4.1",
    "jest": "^20.0.4",
    "request": "^2.72.0",
    "ts-jest": "^20.0.10",
    "typescript": "2.4.0",
    "yargs": "^4.7.1"
  }
}
