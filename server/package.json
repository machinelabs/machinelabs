{
  "name": "machinelabs-server",
  "version": "0.5.0+utc.2017.Aug.07-13.56.43",
  "description": "Prototype backend for machinelabs",
  "main": "index.js",
  "author": "Christoph Burgdorf <christoph.burgdorf@bvsn.org> (http://cburgdorf.wordpress.com/)",
  "license": "ISC",
  "dependencies": {
    "@reactivex/rxjs": "^5.4.2",
    "@types/js-yaml": "^3.5.30",
    "firebase": "^3.7.1",
    "firebase-admin": "^4.2.1",
    "js-yaml": "^3.8.4",
    "minimist": "1.2.0",
    "moment": "^2.18.1",
    "tslint": "^5.5.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@machinelabs/core)/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "node_modules": "rm -rf ./node_modules && yarn install",
    "build": "node ./build/build.js",
    "test": "./node_modules/jest/bin/jest.js",
    "tslint": "tslint -c ./tslint.json src/**/*.ts",
    "tsfix": "tslint --fix -c ./tslint.json src/**/*.ts",
    "ci": "node ./build/build.js --env=staging && npm run tslint && npm run test"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.2.34",
    "@types/jest": "^19.2.2",
    "@types/minimist": "^1.1.28",
    "@types/node": "^6.0.45",
    "@types/source-map": "^0.1.27",
    "chalk": "^1.1.3",
    "jasmine": "^2.4.1",
    "jest": "^19.0.2",
    "request": "^2.72.0",
    "ts-jest": "^19.0.14",
    "typescript": "2.4.0",
    "yargs": "^4.7.1"
  }
}
